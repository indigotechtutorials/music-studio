<div class="absolute top-0 left-0 w-full h-screen z-[101] flex justify-center bg-gray-900/75" data-controller="modal" data-action="click->modal#closeIfBackground">
  <div class="mb-auto bg-gray-600 rounded-lg mt-16 max-w-2xl w-full py-4" data-modal-target="modal">
    <h1 class="text-3xl text-gray-100 text-center"> Upload A Drumkit </h1>

    <%= form_with url: drumkits_path do |f| %>
      <div class="flex flex-col w-3/4 mx-auto">
        <%= f.label :name, class: "text-gray-100 mb-2" %>
        <%= f.text_field :name, class: "bg-gray-600 rounded-full text-gray-100 mb-4" %>
        <div class="w-full bg-gray-500 h-40 flex items-center justify-center" data-controller="dropzone" data-dropzone-directory-value="true" 
          data-dropzone-direct-upload-url-value="<%= rails_direct_uploads_url %>"
          data-dropzone-callback-url-value="<%= upload_file_drumkits_path %>">
          <p class="text-xl text-gray-100 dz-message"> Drag n Drop your Drumkit </p>
        </div>
      </div>
    <% end %>
  </div>
</div>